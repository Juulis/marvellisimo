<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CharacterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heroName2" android:text="Movies" android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp" android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/view" android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.491"/>
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <ImageView
        android:layout_width="411dp"
        android:layout_height="194dp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/bigpic" app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" android:scaleType="centerCrop"/>


    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="81dp" android:layout_height="81dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.366" android:id="@+id/avatar"
        />


    <TextView
        android:text="Iron Man, tidigare även kallad Järnmannen på svenska, är en seriehjälte från Marvel Comics, skapad av författaren och förläggaren Stan Lee, utvecklad av författaren Larry Lieber och designad av serietecknarna Don Heck och Jack Kirby.[1] Figuren gjorde sin debut i Tales of Suspense #39 (mars 1963) och fick sin egen titel i Iron Man #1 (maj 1968)."
        android:layout_width="342dp"
        android:layout_height="135dp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/infoText" android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/toolbar" app:layout_constraintVertical_bias="0.872"
        android:textSize="14sp" android:textAlignment="center" android:textColor="@android:color/black"
        android:fontFamily="sans-serif-black" android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.492"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/Name" android:text="IRONMAN" android:textAlignment="center"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/avatar"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/infoText"/>
    <View
        android:layout_width="332dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/infoText"
        android:id="@+id/view"/>


</android.support.constraint.ConstraintLayout>